<div class="photoAlbumEntry"
  tal:define="portal_type context/portal_type|string:;
              useViewTypes context/portal_properties/site_properties/typesUseViewActionInListings|python:[];
              useView python:portal_type in useViewTypes;
              sitter python:context;
">

  <a tal:attributes="href sitter/absolute_url">
    <div class="sittercontainer">
      <div class="sittercontent"
           tal:define="show_full_details python: False if not 'show_full_details' in vars() else show_full_details;
                       has_qualification python: sitter.qualifications is not None and len(sitter.qualifications)>0;
                       has_experience python: sitter.experiences is not None and len(sitter.experiences)>0;
                       has_language python: sitter.get_language_list() is not None and len(sitter.get_language_list())>0;
                       has_mobility python: sitter.get_mobility() is not None and len(sitter.get_mobility())>0;
      ">

        <h3 class="sitterhead">
          <span tal:replace="sitter/nickname" />
          <span tal:condition="sitter/get_district" tal:replace="python: '(' + sitter.get_district() + ')'" />
        </h3>

        <div class="sitterimageholder" tal:condition="sitter/has_image">
          <img tal:attributes="src string:${sitter/absolute_url}/@@images/image/thumb"/>
        </div>

        <div class="sitterinformation" tal:content="structure python:sitter.abbreviated_details(350)" />
        <div style="clear:both;"></div>

        <div>
          <metal:macro use-macro="context/sittermacros/macros/sitterqualification-macro"></metal:macro>
          <metal:macro use-macro="context/sittermacros/macros/sitterexperiences-macro"></metal:macro>
          <metal:macro use-macro="context/sittermacros/macros/sitterlanguage-macro"></metal:macro>
          <metal:macro use-macro="context/sittermacros/macros/sittermobility-macro"></metal:macro>
        </div>

        <div tal:define="gender sitter/get_gender"
             tal:condition="gender"
             style="float:left; margin-top: 2ex">
          <strong>Geschlecht:</strong> ${gender}
        </div>

        <span class="arrow" style="float:right">
          &rarr;
        </span>
        <div style="clear:both;"></div>

      </div>
    </div>
  </a>

</div>
