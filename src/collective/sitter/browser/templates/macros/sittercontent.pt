<metal:macro define-macro="sittercontent">
  <div class="sittercontent" >
    <div tal:define="fullage view/sitter/fullage; gender view/sitter/get_gender"
         tal:condition="python:fullage or gender">
      <tal:span condition="fullage" i18n:translate="full age">full age
      </tal:span><tal:span condition="python:fullage and gender">,</tal:span>
      <tal:span condition="gender" content="gender" />
    </div>

    <div class="sitterimageholder" tal:condition="view/sitter/has_image">
      <img tal:attributes="src string:${view/sitter/absolute_url}/@@images/image/large"/>
    </div>
    <div class="sitterinformation" tal:content="structure view/sitter/details" />
  </div>
  <div style="clear:both;"></div>

  <div class="flexcontainer">
    <div class="child" tal:condition="view/sitter/qualifications">
      <div>
        <h3>Qualifikationen:</h3>
        <ul>
          <li tal:repeat="obj python: view.sitter.get_qualifications()">
            <b tal:content="obj/beschreibung"></b>
          </li>
        </ul>
      </div>
    </div>

    <div class="child" tal:condition="view/sitter/experiences">
      <div>
        <h3>
          <tal:span i18n:translate="experiences">Erfahrung</tal:span>:
        </h3>
        <ul>
          <li tal:repeat="obj python: view.sitter.get_experiences()">
            <b tal:content="obj/beschreibung"></b> (<i tal:content="obj/Title"> </i>)
          </li>
        </ul>
      </div>
    </div>

    <div class="child"
         tal:define="languages python: view.sitter.get_language_list()"
         tal:condition="languages">
      <h3>Sprachen:</h3>
      <ul>
        <li tal:repeat="langs languages">
          <b tal:content="langs"></b>
        </li>
      </ul>
    </div>

    <div class="child"
         tal:define="mobility python: view.sitter.get_mobility()"
         tal:condition="mobility">
      <h3>Mobilit√§t:</h3>
      <ul>
        <li tal:repeat="mob mobility">
          <b tal:content="mob"></b>
        </li>
      </ul>
    </div>
  </div>
</metal:macro>
