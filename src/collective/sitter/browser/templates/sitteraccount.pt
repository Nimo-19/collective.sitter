<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.sitter">

<body>

<metal:main fill-slot="main">
    <section
      class="sitteraccount__intro"
    >
      <h1 tal:condition="python: view.is_manager" i18n:translate="">Sittermanager</h1>
      <h1 tal:condition="python: not view.is_manager" i18n:translate="">Mein Babysittereintrag</h1>

      <p>${view/account_intro_text}</p>
    </section>
    <section
      class="sitteraccount__next_step"
      tal:condition="python: not view.is_manager"
    >


      <h2 i18n:translate="">Mein nächster Schritt</h2>
      <tal:define tal:define="step python: view.get_current_registration_step()">

        <a class="activestep" tal:condition="python: step.link != ''" tal:attributes="href nocall: step/link" tal:content="nocall: step/text" ></a>
        <span class="activestep" tal:condition="python: step.link == ''" tal:content="nocall: step/text"></span>

        <i tal:attributes="class step/get_icon_classes"></i>
        <p class="step_description" tal:content="structure nocall: step/description"></p>

        <a class="step_more_links_toggle"
           tal:condition="step/has_more_links" href="javascript: event.defaultPrevented"
           onclick="javascript: jQuery('.step_more_links').toggle();">
          <i class="fa fa-toggle-down"></i> Mehr
        </a>
        <ul class="step_more_links" tal:condition="step/has_more_links" style="display:None">
          <li tal:repeat="link step/more_links">
            <a tal:attributes="href nocall: link/link;">
              <i tal:attributes="class nocall: link/class_name"></i>
              <span tal:content="link/text"></span>
            </a>
          </li>
        </ul>
      </tal:define>
    </section>
    <section
      class="sitteraccount__my_entry"
      tal:condition="python: (not view.is_manager) and view.sitter_state.has_accepted()"
    >
      <h2 i18n:translate="">Mein Eintrag</h2>
      <ul class="sitter_entry__toolbar">
        <li tal:condition="python: view.sitter_state.has_accepted() and not view.sitter_state.is_created()">
          <a class="context" href="${view/add_entry_url}" i18n:translate="">Eintrag erstellen</a>
        </li>
        <li tal:condition="python: view.sitter_state.is_created() and not view.sitter_state.is_submitted()">
          <a class="context" href="${view/submit_entry_url}" i18n:translate="">Eintrag einreichen</a>
        </li>
        <li tal:condition="python: view.sitter_state.is_created() and not view.sitter_state.is_deleted()">
          <a class="context" href="${view/edit_entry_url}" i18n:translate="">Eintrag bearbeiten</a>
        </li>
        <li tal:condition="python: view.sitter_state.is_created() and not view.sitter_state.is_deleted()">
          <a class="context" href="${view/delete_entry_url}" i18n:translate="">Eintrag löschen</a>
        </li>
        <li tal:condition="python: view.sitter_state.is_deleted()">
          <a class="context" href="${view/recycle_entry_url}" i18n:translate="">Eintrag wiederherstellen</a>
        </li>
      </ul>
      <div class="sittercontainer" tal:condition="python: view.sitter_state.is_created() and not view.sitter_state.is_deleted()">
        <div metal:use-macro="context/sittercontent/sittercontent"></div>
      </div>
    </section>
    <section
      class="sitteraccount__manager_tools"
      tal:condition="python: view.is_manager"
    >
      <h2>Werkzeuge</h2>
      <ul class="sitter_entry__toolbar">
        <li>
          <a
            class="context"
            href="${view/sitter_folder/absolute_url}/folder_contents"
            i18n:translate=""
          >Ordner Inhalt anzeigen</a>
        </li>
        <li>
          <a
            class="context"
            href="${view/sitter_folder/absolute_url}/edit"
            i18n:translate=""
          >Ordner Eigenschaften bearbeiten</a>
        </li>
        <li tal:condition="python: view.agreement_url is not None">
          <a
            class="context"
            href="${view/agreement_url}"
            i18n:translate=""
          >Nutzungsbedingungen bearbeiten</a>
        </li>
        <li tal:condition="python: view.info_text_url is not None">
          <a
            class="context"
            href="${view/info_text_url}"
            i18n:translate=""
          >Info-Text für unangemeldete Benutzer bearbeiten</a>
        </li>
        <li tal:condition="python: view.info_text_logged_in_url is not None">
          <a
            class="context"
            href="${view/info_text_logged_in_url}"
            i18n:translate=""
          >Info-Text für angemeldete Benutzer bearbeiten</a>
        </li>
        <li>
          <a
            class="context"
            href="${view/sitter_folder/absolute_url}/deletesitter"
            i18n:translate=""
          >Alte Sitter Löschen</a>
        </li>
      </ul>
    </section>
    <section
      class="sitteraccount__faq"
      tal:condition="python: len(view.get_fqa) > 0"
    >
      <h2 i18n:translate="">FAQ</h2>
      <ul>
        <tal:repeat tal:repeat="fqa view/get_fqa">
          <li>
            <h3>${fqa/question}</h3>
            <p>${fqa/answer}</p>
          </li>
        </tal:repeat>
      </ul>
    </section>
</metal:main>

</body>
</html>
